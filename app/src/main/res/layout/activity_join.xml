<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mptsix.todaydiary.view.activity.JoinActivity">

    <TextView
        android:id="@+id/pwdQuestion"
        android:layout_width="96dp"
        android:layout_height="35dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="471dp"
        android:layout_marginBottom="225dp"
        android:height="35dp"
        android:fontFamily="@font/fontstyle"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="QUESTION"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pwdAnswer"
        android:layout_width="96dp"
        android:textColor="@color/black"
        android:layout_height="35dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="541dp"
        android:layout_marginBottom="155dp"
        android:height="35dp"
        android:fontFamily="@font/fontstyle"
        android:gravity="center"
        android:text="ANSWER"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputPwdAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="541dp"
        android:textColor="@color/black"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="155dp"
        android:width="200dp"
        android:height="35dp"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pwdAnswer"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/submitBtn"
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="262dp"
        android:layout_marginTop="613dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="70dp"
        android:background="?attr/selectableItemBackground"
        android:fontFamily="@font/fontstyle"
        android:text="SUBMIT"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userInformation"
        android:layout_width="231dp"
        android:layout_height="65dp"
        android:layout_marginStart="90dp"
        android:textColor="@color/black"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="594dp"
        android:height="35dp"
        android:fontFamily="@font/fontstyle"
        android:gravity="center"
        android:text="User Information"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputJoinID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="191dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="505dp"
        android:width="200dp"
        android:height="45dp"
        android:textSize="15dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/userID"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputJoinName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="331dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="365dp"
        android:width="200dp"
        android:textColor="@color/black"
        android:height="35dp"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="96dp"
        android:layout_height="35dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="331dp"
        android:textColor="@color/black"
        android:layout_marginBottom="365dp"
        android:height="35dp"
        android:fontFamily="@font/fontstyle"
        android:gravity="center"
        android:text="NAME"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/inputJoinName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputJoinPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="261dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="435dp"
        android:width="200dp"
        android:height="35dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userBirth"
        android:layout_width="96dp"
        android:layout_height="35dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="401dp"
        android:layout_marginBottom="295dp"
        android:height="35dp"
        android:fontFamily="@font/fontstyle"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="DAY OF BIRTH"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userPwd"
        android:layout_width="96dp"
        android:layout_height="35dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="261dp"
        android:layout_marginBottom="435dp"
        android:height="35dp"
        android:fontFamily="@font/fontstyle"
        android:gravity="center"
        android:text="PASSWORD"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/inputJoinPwd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputJoinBirth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="401dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="295dp"
        android:width="200dp"
        android:height="45dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/userBirth"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/pwdQuestionSpinner"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:textColor="@color/black"
        android:layout_marginTop="471dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="225dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pwdQuestion"
        app:layout_constraintTop_toTopOf="parent" />
    <!--android:entries="@array/passwordQuestion"-->

    <TextView
        android:id="@+id/userID"
        android:layout_width="96dp"
        android:layout_height="35dp"
        android:textColor="@color/black"
        android:layout_marginStart="52dp"
        android:layout_marginTop="191dp"
        android:layout_marginBottom="505dp"
        android:height="35dp"
        android:fontFamily="@font/fontstyle"
        android:gravity="center"
        android:text="ID"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>